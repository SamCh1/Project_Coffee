extends ../../layouts/default.pug

block main

  div(class="login")
    div(class="container")
      div(class="login__wrap")
        div(class="login__content")
          img(src="https://img.freepik.com/free-vector/international-day-coffee-with-mug_23-2148658353.jpg?t=st=1727593895~exp=1727597495~hmac=566a9b0a07cc131b4db1da69d91bbfc25b19c7dcf1aab3c127c79581162a5487&w=1060")
        div(class="login__form")
          h1(class="login__form-text") Đăng nhập tài khoản
          form(
            action="/user/login"
            method="POST"
          )
            div(class="login__form-group")
              label(for="email") Email:
              input(
                type="email"
                class="login__form-control"
                id="email"
                name="email"
                placeholder="User name"
                required
              )
            div(class="login__form-group")
              label(for="password") Password:
              input(
                type="password"
                class="login__form-control"
                id="password"
                name="password"
                placeholder="******"
                required
              )
            div(class="login__form-group")
              button(
                type="submit"
                class="login__btn"
              ) Đăng nhập
          div(class="form__other")
            a(href="/user/password/forgot") Quên Mật Khẩu
            a(href="/user/register") Đăng Ký
