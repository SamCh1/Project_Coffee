extends ../../layouts/default.pug
include ../../mixins/alert.mixins.pug

block main
  +alert-error(5000)

  div(class="login")
    div(class="container")
      div(class="login__wrap" style="justify-content:center;")
        div(class="login__inner-wrap")
          h1(class="login__form-text") Nhập mã OTP xác thực
          form(
            action="/user/password/otp"
            method="POST"
          )
            div(class="login__form-group")
              label(for="email") Email
              input(
                type="email"
                class="login__form-control"
                id="email"
                name="email"
                required
                value=email
                readonly
              )
            div(class="login__form-group")
              label(for="otp") Mã OTP
              input(
                type="text"
                class="login__form-control"
                id="otp"
                name="otp"
                required
              )
            div(class="login__form-group")
              button(
                type="submit"
                class="login__btn"
              ) Xác nhận