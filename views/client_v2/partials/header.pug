include ../mixins/sub-menu.mixins.pug

//Header
div(class="header")
    div(class="container")
        div(class="header__wrap")
            div(class="header__icon-menu")
                i(class="fa-solid fa-bars")
            div(class="header__logo")
                a(href="/")
                    img(src="/image/logo2.png" alt="Monitor")
            nav(class="header__menu")
                ul
                    li
                        a(href="/") Trang chủ
                    li(class="sub-menu")
                        a(href="/products") Sản phẩm
                        if(layoutCaterogyProducts)
                            +sub-menu(layoutCaterogyProducts)
                    li
                        a(href="/blog") Blog
                    li
                            a(href="/cart") Giỏ hàng (#{cart ? cart.products.length : 0})      
                    if(user)
                        li 
                            a(href="/user/info") Tài khoản
                        li 
                            a(href="/user/logout") Đăng xuất
                    else         
                        li 
                            a(href="/user/login") Đăng nhập     
            div(class="header__search")
                form(action="")
                    input(
                        type="text" 
                        placeholder="Nhập từ khoá..." 
                        class="form-control"
                        name="keyword"
                        value=keyword )
                    button(
                        type="submit"
                        class="")
                        i(class="fa-solid fa-magnifying-glass")
            //- div(class="header__button")
            //-     a(href="#" class="btn") Tham gia cộng đồng
            div(class="header__icon-search")
                i(class="fa-solid fa-magnifying-glass")      
//End-header